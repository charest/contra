task top_level()
  
  var num = 1024
  var num_parts = 4
  var num_points = num*num

  var parts = {0 .. num_parts-1}
  var points = {0 .. num_points-1}

  var matrix1 : over(points) = 1.
  var matrix2 : over(points) = 1.
  var matrix3 : over(points) = 0.

  foreach i in parts do
    for n in 1 to 100 do
      for j in points do
        matrix3[j] = matrix1[j] * matrix2[j]
      end
    end
  end

end

top_level()
