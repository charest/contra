fn main(i64 x) { 
  # this is a one line if statement
  if x < 0 print("inside\n")
  # this is a multiliner
  if x < 0 { 
    print("also inside - first line\n")
    print("also inside - second line\n")
  }

  # here is an example of if/else
  y = 0
  if x < 0
    y = -x
  else
    y = x
  print("y = %d\n", y)

  # here is an example of if/elif/else
  z = 0
  if x < 2 {
    print("Inside if\n")
    z = -x
  }
  elif x < 3 {
    print("Inside else if\n")
    z = x - 3
  }
  else {
    print("Inside else\n")
    z = x - 4
  }
  print("z = %d\n", z)

}

main(-1)
print("\n")
main(1)
print("\n")
main(2)
print("\n")
main(3)


